{
  "buildCommand": "bun run build",
  "installCommand": "echo '{\"name\":\"temp\"}' > ../../../package.json.bak && mv ../../../package.json ../../../package.json.orig && mv ../../../package.json.bak ../../../package.json && bun install && mv ../../../package.json.orig ../../../package.json",
  "functions": {
    "src/pages/api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "env": {
    "OPENROUTER_API_KEY": "@openrouter_api_key",
    "LANGFUSE_SECRET_KEY": "@langfuse_secret_key",
    "LANGFUSE_PUBLIC_KEY": "@langfuse_public_key", 
    "LANGFUSE_BASEURL": "@langfuse_baseurl"
  },
  "build": {
    "env": {
      "OPENROUTER_API_KEY": "@openrouter_api_key",
      "LANGFUSE_SECRET_KEY": "@langfuse_secret_key",
      "LANGFUSE_PUBLIC_KEY": "@langfuse_public_key",
      "LANGFUSE_BASEURL": "@langfuse_baseurl"
    }
  }
}